.authors-horizontal-list
  margin:4rem 0
  
.author
  img
    min-height:200px
    
  .name
    margin-top:0.25rem
      
  small
    display:block

.founder::after
  content: "Founder"
  position:absolute
  top:0
  left:0
    
.author-social
  margin-top:5px
  > a
    text-decoration:none
    margin-right:0.15rem
  path
    fill:lighten(desaturate(blue, 100%), 50%)
  svg
    path
      @extend .animate-fill