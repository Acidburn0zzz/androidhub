#feed-grid
  margin-bottom:2rem
  will-change:height
  transition:height 0.15s ease 0.3s

.feed-item 
  border-radius:2px
  will-change:top, left
  &:hover
    background:white
    box-shadow:0 1px 2px hsla(0,0%,0%,0.2)
    // img
    //   transform:scale(1.1)
    //   box-shadow:0 0 1rem hsla(0,0%,0%,0.2)

  > a
    text-decoration:none
    color:initial
    
  img
    height:200px
    overflow:hidden
    
    +above(1200px)
      height:150px
    
.post-title
  color:hsl(0,0%,50%)
  margin:0.5rem 0 0.25rem
  // font-size:2vw
  // +below(480px)
  //   font-size:4vw
  // +above(1024px)
  //   font-size:1.5vw
  
.post-meta
  color:hsl(0,0%,70%)
  margin:0.25rem 0
  > span
    margin:0 4px
    color:hsl(0,0%,50%)
  
.post-excerpt
  color:hsl(0,0%,20%)
  
.post-meta, .post-excerpt
  font-size:0.6rem
  display:block
  
.filters
  inline-list(1rem)
  text-transform:capitalize
  > li.active
    color:default-color