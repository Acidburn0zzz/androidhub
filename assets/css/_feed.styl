#feed-grid
  margin-bottom:2rem
  will-change:height
  
  &[data-empty]:after
    content:"No results"
    width:100%
    text-align:center

.feed-item 
  border-radius:2px
  will-change:transform, top, left
  &:hover .post-title
    text-decoration:underline

  > a
    text-decoration:none
    color:initial
    
  img
    height:200px
    overflow:hidden
    
    +above(1200px)
      height:150px
    
.post-title
  color:hsl(0,0%,50%)
  margin:0.5rem 0 0.25rem
  color:blue
  // font-size:2vw
  // +below(480px)
  //   font-size:4vw
  // +above(1024px)
  //   font-size:1.5vw
  
.post-meta
  color:hsl(0,0%,70%)
  margin:0.25rem 0
  > span
    margin:0 4px
    color:hsl(0,0%,50%)
  
.post-excerpt
  color:hsl(0,0%,20%)
  
.post-meta, .post-excerpt
  font-size:0.6rem
  display:block

.feed-manipulators .grid
  +below(480px)
    h3
      display:none
    .grid--justify-end,
    .grid__col-sm-7
      align-items:center
  
.filters
  inline-list(1rem)
  text-transform:capitalize
  
  > li
    cursor:pointer
    &.active
      color:darken(default-color, 40%)