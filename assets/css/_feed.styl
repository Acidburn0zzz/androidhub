#feed-grid
  margin-bottom:2rem
  will-change:height
  
  +below(mobile)
    margin-bottom:0
  
  &[data-empty]:after
    content:"No results"
    width:100%
    text-align:center

.feed-item 
  border-radius:2px
  will-change:transform, top, left

  > a
    text-decoration:none
    color:initial
    &:hover .post-title
      text-decoration:underline
    
  > .feed-item-category
    text-transform:capitalize
    color:hsl(214, 4%, 34%)
    margin-bottom:0.5rem
    font-size:0.7rem
    
  img
    height:200px
    overflow:hidden
    
    &.lazyloading
      @extend .placeholder-background-image
    
    +above(desktop)
      height:150px
    
.post-title
  margin:0.5rem 0 0.25rem
  color:blue
  
.post-meta
  color:intel-grey
  margin:0.25rem 0
  > span
    margin:0 4px
    color:hsl(0, 0%, 55%)
  > address
    color:intel-grey
    display:inline
    font-style:normal
  
.post-excerpt
  color:hsl(0,0%,13%)
  
.post-meta, .post-excerpt
  font-size:0.7rem
  display:block

.feed-manipulators .grid
  // +below(tablet)
  //   h3
  //     display:none
  +below(mobile)
    .grid__col-sm-8
      align-items:center

#feed-filter
  border:none
  outline:none
  background:none
  color:white
  font-size:1.17em
  position:relative
  top:0.03rem
  
.chrome-on-windows
  #feed-filter > option
    color:blue
    background:white
      
.related-posts
  > .related-post
    &:first-child
      border-top:none
      padding-top:0
      margin-top:0

.related-post
  border-top:1px solid #eee
  margin-top:2rem
  padding-top:2rem
  
  img
    height:100px
    padding-bottom:1rem
    +above(mobile)
      padding-bottom:0
      padding-right:1rem
    +above(tablet)
      height:170px