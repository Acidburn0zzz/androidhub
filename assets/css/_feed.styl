.feed-item 
  border-radius:0.5em
  // &:hover
  //   img
  //     transform:scale(1.1)
  //     box-shadow:0 0 1rem hsla(0,0%,0%,0.2)

  > a
    text-decoration:none
    color:initial
    
  img
    height:200px
    overflow:hidden
    
    +above(1200px)
      height:150px
    
.post-title
  color:hsl(0,0%,50%)
  margin:0.5rem 0 0.25rem
  
.post-meta
  color:hsl(0,0%,70%)
  margin:0.25rem 0
  > span
    margin:0 4px
    color:hsl(0,0%,50%)
  
.post-excerpt
  color:hsl(0,0%,20%)
  
.post-meta, .post-excerpt
  font-size:0.6rem
  
.filters
  inline-list(1rem)
  text-transform:capitalize