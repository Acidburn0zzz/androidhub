header
  background-size:cover
  background-position:center center
  color:white
  text-shadow:1px 1px 0 hsla(0,0%,0%,0.2)
    
  &.lazyloaded:before
    content: " "
    position: absolute
    top:0
    bottom:0
    left:0
    right:0
    background-color:hsla(0,0%,0%,0.3)
  
.centered-title
  margin:5vh auto auto
  +above(900px)
    margin:15vh auto 5vh
  
.header-title
  margin-bottom:0
  +below(mobile)
    font-size:1.5em

.header-subtitle
  +below(mobile)
    font-size:0.7rem

.section-title
  padding:1rem 0
  background:default-color
  color:white