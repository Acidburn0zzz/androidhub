.testimonial
  background:blue
  color:white
  padding:4rem 0 3rem
  position:relative
  overflow:hidden
  
  &:before
    // content:url(/img/tear.svg)
    content:" "
    background-image:url(/img/tear.svg)
    background-size:cover
    position:absolute
    top:-3px
    left:-8px
    width:102%
    height:39px
    filter: drop-shadow(0 1px 2px hsla(0,0%,0%,0.3))
  
  .pop-out
    position:absolute
    top:0
    left:-40px
    +below(mobile)
      position:relative
      top:-1rem
      left:0
    
  .btn.clear:hover
    color:white