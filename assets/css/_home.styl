.hero
  padding:5rem 0
  padding:10vh 0
  position:relative
  overflow:hidden
  text-shadow:0 2px 4px hsla(0,0%,0%,0.15)
  color:white
  // backdrop-filter: grayscale(100%)
  
  a
    text-decoration:none
    color:white
    
    &:hover, &:active
      color:white
      text-decoration:underline
  
  .heroimage
    position:absolute
    top:0
    left:0
    width:100%
    z-index:1
    filter: grayscale(100%)
    
    +below(mobile)
      width:auto
      height:100%

  section
    position:relative
    z-index:2
  > a
    &:after
      content:" "
      display:block
      position:absolute
      top:0
      left:0
      right:0
      bottom:0
      background-color:hsla(0,0%,0%,0.4)
      z-index:1

.hero-title
  margin:0.25rem 0 2rem
  text-transform:capitalize
  +below(mobile)
    font-size:1.5em

.author-nameplate
  .avatar
    float:left
    margin-right:1rem
  small
    display:inherit
    margin-top:-0.25em

.avatar
  width:40px
  height:40px
  box-shadow:0 2px 4px hsla(0,0%,0%,0.4)
  transition:box-shadow 0.3s ease, transform 0.3s ease
  &:hover
    transform:scale(1.1)
    box-shadow:0 3px 6px hsla(0,0%,0%,0.4)

.intro
  background-color:#eee
  
  .text-overlay
    position:absolute
    top:3rem
    left:0
    width:100%
    margin:0 auto

.recent
  position:relative
  overflow:hidden
  background-color:white
  padding-top:2rem

.recent-title
  margin-top:0
  
