#hub-logo
  &:hover
    path:last-child
      fill:lighten(default-color, 20%)

#icon-search
  width:15px
  height:15px
  path
    fill:white
    
#icon-arrow
  height:20px
  
#tweet > svg,
#post > svg,
#plus > svg
  width:65px
  height:65px
  filter: drop-shadow(1px 1px 3px hsla(0,0%,0%,0.4))
  ellipse
    fill:white
  path
    fill:twitter

#tweet    
  &:hover
    #icon-twitter path
      fill:lighten(twitter, 40%)
    
#post
  #icon-facebook path
    fill:facebook
  &:hover 
    #icon-facebook path
      fill:lighten(facebook, 40%)
    
#plus
  #icon-googleplus path
    fill:gplus
  &:hover 
    #icon-googleplus path
      fill:lighten(gplus, 40%)
      
a:hover
  #icon-twitter-bird path
    fill:twitter
  #icon-link path
    fill:default-color
  #icon-codepen path
    fill:codepen
  #icon-github path
      fill:github