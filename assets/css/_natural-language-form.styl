.nl-form
  width:100%
  margin:0.3em auto 0 auto
  font-size: 1.7em
  line-height: 1.5
  
  +below(45em)
    font-size 2em

  +below(25em)
      font-size 1.5em
  
  ul
    list-style none
    margin 0
    padding 0
    
  input, textarea
    &:focus
      outline none
      
  textarea
    width:100%
    height:200px
    border:1px solid #ddd
    font-size:1rem
    margin-top:2rem
      
  .nl-field-go
    position absolute
    right 0
    top 0
    height 100%
    cursor pointer
    background rgba(0,0,0,0.1)
    width 1.8em
    text-align center
    color transparent
    
  .nl-submit
    line-height 3
    text-transform uppercase
    cursor pointer
    position relative
    background default-color
    color #fff
    padding 0 1em 0 0
    font-size 40%
    font-weight bold
    letter-spacing 3px

  input, select, button
    border none
    background transparent
    font-family inherit
    font-size inherit
    color inherit
    font-weight inherit
    line-height inherit
    display inline-block
    padding 0
    margin 0
    appearance none

.nl-field
  display inline-block
  position relative
  
  &.nl-field-open
    z-index 100
    
    ul
      visibility visible
      opacity 1
      transform translateY(-50%) scale(1)
      transition visibility 0s 0s, opacity 0.3s, transform 0.3s
      
    & ~ .nl-overlay
      opacity 1
      visibility visible
      transition-delay 0s
      
  ul
    position absolute
    visibility hidden
    background default-color
    left -0.5em
    top 50%
    font-size 80%
    opacity 0
    transform translateY(-40%) scale(0.9)
    transition visibility 0s 0.3s, opacity 0.3s, transform 0.3s
    
    li
      color #fff
      position relative

.nl-field-toggle,
.nl-form input,
.nl-form select
  line-height inherit
  display inline-block
  color default-color
  cursor pointer
  border-bottom 1px dashed default-color

.nl-dd
  ul
    li
      padding 0 1.5em 0 0.5em
      cursor pointer
      white-space nowrap
      
      &.nl-dd-checked
        color darken(default-color, 20%)
        
        &:before
          content "\e000"
          position absolute
          right 1em
          font-size 50%
          line-height 3

.no-touch
  .nl-dd
    ul li:hover
      background rgba(0,0,0,0.05)
      &:active
        color #478982
        
  .nl-form
    .nl-submit
      &:hover
        &:before
          background #58a199

.nl-dd ul li.nl-dd-checked:before,
.nl-submit:before,
.nl-field-go:before
  font-family 'nlicons'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  -webkit-font-smoothing antialiased

.nl-ti-text
  ul
    min-width 8em
    
    li
      &.nl-ti-input
        input
          width 100%
          padding 0.2em 2em 0.2em 0.5em
          border-bottom none
          color #fff
          
      &.nl-ti-example
        font-size 40%
        font-style italic
        font-weight 400
        padding 0.4em 1em
        color rgba(0,0,0,0.2)
        border-top 1px dashed rgba(255,255,255,0.7)
        
        em
          color #fff

.nl-field-go
  &:before
    content "\e001"
    font-size 75%
    color #fff
    width 100%
    line-height 2.5
    display block

input
  &::-webkit-input-placeholder
    color rgba(255,255,255,0.8)
  &::-moz-placeholder
    color rgba(255,255,255,0.8)
  &:-ms-input-placeholder
    color rgba(255,255,255,0.8)

input:active::-webkit-input-placeholder ,
input:focus::-webkit-input-placeholder
  color rgba(255,255,255,0.2)

input:active::-moz-placeholder,
input:focus::-moz-placeholder
  color rgba(255,255,255,0.2)

input:active::-ms-input-placeholder ,
input:focus::-ms-input-placeholder
  color rgba(255,255,255,0.2)

.nl-submit-wrap
  margin-top 0.4em

.nl-submit
  &:before
    content "\e001"
    color #fff
    float left
    padding 0 0.7em
    margin 0 0.8em 0 0
    background darken(default-color, 20%)

.no-touch .nl-form .nl-submit:hover,
.no-touch .nl-form .nl-submit:active
  background darken(default-color, 20%)

.nl-overlay
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,0.5)
  opacity 0
  z-index 99
  visibility hidden
  transition visibility 0s 0.3s, opacity 0.3s
