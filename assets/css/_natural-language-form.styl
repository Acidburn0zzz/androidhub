.nl-form
  width:100%
  margin:0 auto
  font-size: 1.7em
  line-height: 1.5
  
  +below(tablet)
    padding-top 1rem
    font-size 2em

  +below(mobile)
    font-size 1.5em
  
  ul
    list-style none
    margin 0
    padding 0
    
  input, textarea
    &:focus
      outline none
      
  textarea
    width:100%
    height:200px
    border:1px solid lighten(blue, 50%)
    margin:2rem 0
    color:blue
      
  .nl-field-go
    position absolute
    right 0
    top 0
    height 100%
    cursor pointer
    background darken(blue, 20%)
    width 1.8em
    text-align center
    
  .nl-submit
    background blue
    color #fff
    padding 0.5em 1em
    font-size 1.4rem

  input, select, button
    border none
    background transparent
    font-family inherit
    font-size inherit
    color inherit
    font-weight inherit
    line-height inherit
    display inline-block
    padding 0
    margin 0
    appearance none
    
  input
    &::-webkit-input-placeholder
      color lighten(blue, 90%)
    &::-moz-placeholder
      color lighten(blue, 90%)
    &:-ms-input-placeholder
      color lighten(blue, 90%)

  input:active::-webkit-input-placeholder ,
  input:focus::-webkit-input-placeholder
    color lighten(blue, 10%)

  input:active::-moz-placeholder,
  input:focus::-moz-placeholder
    color lighten(blue, 10%)

  input:active::-ms-input-placeholder ,
  input:focus::-ms-input-placeholder
    color lighten(blue, 10%)

.nl-field
  display inline-block
  position relative
  
  &.error > a
    color:red
    border-bottom-color:red
    
  &.complete > a
    color:default-color
    border-bottom-color:transparent
  
  &.nl-field-open
    z-index 100
    
    ul
      visibility visible
      opacity 1
      transform translateY(-50%) scale(1)
      transition visibility 0s 0s, opacity 0.3s, transform 0.3s
      
    & ~ .nl-overlay
      opacity 1
      visibility visible
      transition-delay 0s
      
  ul
    position absolute
    visibility hidden
    background blue
    left -0.5em
    top 50%
    opacity 0
    transform translateY(-40%) scale(0.9)
    transition visibility 0s 0.3s, opacity 0.3s, transform 0.3s
    +below(mobile)
      font-size 80%
    
    li
      color #fff
      position relative

.nl-field-toggle,
.nl-form input,
.nl-form select
  line-height inherit
  display inline-block
  color blue
  cursor pointer
  border-bottom 1px dashed blue

.nl-dd
  ul
    li
      padding 0 1.5em 0 0.5em
      cursor pointer
      white-space nowrap
      
      &.nl-dd-checked
        color darken(blue, 50%)

.no-touch
  .nl-dd
    ul li:hover
      background rgba(0,0,0,0.05)
      &:active
        color #478982

.nl-ti-text
  ul
    min-width 12em
    
    li
      &.nl-ti-input
        input
          width 100%
          padding 0.2em 2em 0.2em 0.5em
          border-bottom none
          color #fff
          
      &.nl-ti-example
        font-size 40%
        font-style italic
        font-weight 400
        padding 0.4em 1em
        color darken(blue, 40%)
        border-top 1px dashed lighten(blue, 70%)
        
        em
          color #fff

.nl-submit-wrap
  margin-top 0.4em

.no-touch .nl-form .nl-submit:hover,
.no-touch .nl-form .nl-submit:active
  background darken(blue, 20%)

.nl-overlay
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,0.5)
  opacity 0
  z-index 99
  visibility hidden
  transition visibility 0s 0.3s, opacity 0.3s
