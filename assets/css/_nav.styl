nav
  box-shadow:0 2px 5px hsla(0,0%,0%,0.13)
  padding:1rem 0
  background-color:white
  position:relative
  z-index:2
  
  .link-nav-set > a
    color:hsl(0,0%,20%)
    &:first-child
      margin-left:0
    &:last-child
      margin-right:0
  
  +below(480px)  
    .link-nav-set
      margin:0.5rem 0
        
    .grid > div:not(.link-nav-set)
      justify-content:center
      > a
        text-align:center
        display:block
    

.link-nav-set  
  > a
    text-decoration:none
    color:hsl(0,0%,50%)
    font-size:0.8rem
    margin:0 0.25em
    cursor:pointer
    
    &:hover, &.active
      color:default-color
    
.social-icon 
  @extend .flex-child-image-fix
  margin:0 2px
  height:25px
  width:25px
  &:last-child
    margin-right:0
  &:hover > svg 
    > path
      fill:#222
    ellipse
      fill:default-color
    
.logo
  margin-right:2rem
  
.field-guide
  margin-left:1rem