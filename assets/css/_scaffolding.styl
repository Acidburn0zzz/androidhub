html, body
  background-color:white

.grid
  &.reverse-margin-sm
    margin:0 -0.5em
    width:calc(100% + 1em)
    max-width:calc(100% + 1em)
  &.reverse-margin-md
    margin:0 -1em
    width:calc(100% + 2em)
    max-width:calc(100% + 2em)

main
  background-color:#eee
  &.post
    padding-bottom:1rem
    overflow:hidden
    position:relative

section
  margin:0 auto
  max-width:992px
  
  +below(992px)
    padding:0 1rem

  img, svg
    max-width:100%

a[href]
  color:blue
  &:hover
    color:darken(blue,20%)
  &.light
    color:white
    text-decoration:none
    &:hover
      color:white
      text-decoration:underline

article
  max-width:768px
  margin:0 auto
  padding:0 0 2rem 0
  overflow:hidden
  
aside
  border-top:1px solid #ddd

input[type='search']
  appearance:none
  border:none
  background:none
  outline:none
  box-shadow:none
  border-radius:0
  border-bottom:1px solid white
  &::-webkit-input-placeholder
    color:hsla(0,0%,100%,0.5)
  &::-moz-placeholder
    color:hsla(0,0%,100%,0.5)
  &:-ms-input-placeholder
    color:hsla(0,0%,100%,0.5)