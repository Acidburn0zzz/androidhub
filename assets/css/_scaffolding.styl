html, body
  background-color:white

.grid
  &.reverse-margin-sm
    margin:0 -0.5em
    width:calc(100% + 1em)
    max-width:calc(100% + 1em)
  &.reverse-margin-md
    margin:0 -1em
    width:calc(100% + 2em)
    max-width:calc(100% + 2em)

main
  background-color:#eee

section
  margin:0 auto
  max-width:992px
  
  +below(992px)
    padding:0 1rem
    &.no-responsive-padding
      padding:0

  img
    max-width:100%

a[href]
  color:blue
  &:hover
    color:darken(blue,20%)

article
  max-width:768px
  margin:0 auto
  padding:0 0 2rem 0

input[type='search']
  appearance:none
  border:none
  background:none
  outline:none
  box-shadow:none
  border-radius:0
  border-bottom:1px solid white