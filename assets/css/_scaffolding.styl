html, body
  background-color:white

.grid
  &.reverse-margin-sm
    margin:0 -0.5em
    width:calc(100% + 1em)
    max-width:calc(100% + 1em)
  &.reverse-margin-md
    margin:0 -1em
    width:calc(100% + 2em)
    max-width:calc(100% + 2em)

main
  background-color:#eee
  
  &.post
    padding-bottom:1rem
    overflow:hidden
    position:relative
  
  > section
    +below(mobile)
      padding:0

section
  margin:0 auto
  max-width:992px
  
  +below(992px)
    padding:0 1rem

  img, svg
    max-width:100%

a[href]
  color:blue
  &:hover
    color:darken(blue,20%)
    
  &.light, &.dark, &.inherit-color
    text-decoration:none
    &:hover
      text-decoration:underline

  &.light
    color:white
    &:hover
      color:white
  &.dark
    color:#555
    &:hover
      color:#222
  &.inherit-color
    color:inherit
    &:hover
      color:inherit

img[src=""]
  @extend .placeholder-background-image

article
  max-width:768px
  margin:0 auto
  padding:0 0 2rem 0
  overflow:hidden
  
aside
  border-top:1px solid #ddd

input[type='search']
  appearance:none
  border:none
  background:none
  outline:none
  box-shadow:none
  border-radius:0
  border-bottom:1px solid white
  &::-webkit-input-placeholder
    color:hsla(0,0%,100%,0.5)
  &::-moz-placeholder
    color:hsla(0,0%,100%,0.5)
  &:-ms-input-placeholder
    color:hsla(0,0%,100%,0.5)
    
blockquote
  font-family: clearsans-thin
  position:relative
  background:blue
  color:white
  font-size:1.6rem
  padding:0.5rem 2rem 1.5rem
  
  a[href]
    color:white
    &:hover
      color:white
  
  +below(tablet)
    margin:0
  
  &:after
    content:" "
    background-image:url(/img/tear.svg)
    background-size:auto 100%
    position:absolute
    transform:rotate(180deg)
    bottom:-17px
    left:-8px
    width:102%
    height:39px