doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='description of your site')
    meta(name='author', content= "author of the site")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    include includes/_open-graph
    include includes/_twitter

    title= post.title
    != css('/')

  body
    include includes/_nav
    - var hero = post.heroimage ? post.heroimage : 'http://placehold.it/1400x577&text=_'
    - var author_handle = post._categories[1] ? post._categories[1] : 'admin'
    - var author = data.authors[author_handle]

    header.reflex-container.reflex-wrap(style='background-image:url(#{hero})')
      .reflex-align-self-center.centered-title.reflex-direction-column.reflex-col-10
        h1.header-title.normal-type= post.title
        h4.thin-type #{author.displayname} | #{post.date}
    
    section
      article
        block content

      a.btn(href='') &laquo; back to index
       
    include includes/_footer 
    != js('/')
    //- != JSON.stringify(post)
