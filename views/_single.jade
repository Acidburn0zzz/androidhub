doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='description of your site')
    meta(name='author', content= "author of the site")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    base(href=base)

    include includes/_open-graph
    include includes/_twitter

    title= post.title
    != css('')

  body
    include includes/nav

    header.reflex-container.reflex-wrap(style='background-image:url(http://placehold.it/1400x577&text=_)')
      .reflex-align-self-center.centered-title.reflex-direction-column.reflex-col-8
        h1.header-title.normal-type= post.title
        h4.thin-type by #{post.author} | #{post.date}
    
    section
      article
        //- h4 by #{post.author}
        block content

      a.btn(href='') &laquo; back to index
        
    != js('')
