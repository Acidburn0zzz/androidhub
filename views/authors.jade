extends layouts/_general
include mixins/_author
include mixins/_nav

block nav
  +nav('authors')

block content
  .section-title: section
    h3.marginless Authors

  main: section: .card 
    ul.grid.reverse-margin-md
      for author in _.sortBy(data.authors, 'displayname')
        +author(author)

    .spacer.lg.hidden-xs
