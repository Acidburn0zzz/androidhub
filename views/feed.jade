include mixins/post-item
extends layout

block content
  h3 Feed

  ul.feed-grid.reflex-container.reflex-wrap
    - var postsByDate = _.sortByAll(site.posts.all(), 'date')

    for post in postsByDate
      unless post._ignore
        +post-item(post)

block scripts
  script(src='bower_components/isotope/dist/isotope.pkgd.min.js')
  script(src='js/feed.js')