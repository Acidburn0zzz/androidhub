.dark-grey-bg: section
  h2.marginless.text-center Share the Hub with your friends and followers!

  .grid.grid--justify-space-around
    .grid__col-4.grid__col-md-3
      a.share.tweet.inline-social(share-target='twitter')
        span.social-icon-wrap
          include svg/_twitter
        span.social-text Post to Twitter

    .grid__col-4.grid__col-md-3
      a.share.post.inline-social(share-target='facebook')
        span.social-icon-wrap
          include svg/_facebook
        span.social-text Post to Facebook

    .grid__col-4.grid__col-md-3
      a.share.plus.inline-social(share-target='google')
        span.social-icon-wrap
          include svg/_googleplus
        span.social-text Post to Google+
